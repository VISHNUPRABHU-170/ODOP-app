<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homeback"
    tools:context=".HomeActivity">

    <View
        android:id="@+id/divider2"
        android:layout_width="130dp"
        android:layout_height="5dp"
        android:background="#363BC3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />


    <ImageView
        android:id="@+id/profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042"
        app:srcCompat="@drawable/user_icon_removebg_preview" />

    <ImageView
        android:id="@+id/cart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.699"
        app:layout_constraintStart_toEndOf="@+id/district"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988"
        app:srcCompat="@drawable/cart_icon" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/district"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988"
        app:srcCompat="@drawable/home_icon" />

    <ImageView
        android:id="@+id/district"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988"
        app:srcCompat="@drawable/district_icon" />


    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="42dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/location_icon" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery to -"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.9" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_marginTop="65dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="625dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="370dp"
                android:layout_height="130dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/rectwithradiusred"
                tools:layout_editor_absoluteX="72dp" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginTop="-80dp"
                android:text="OFFERS FOR YOU"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/groundnut_oil"
                    tools:layout_editor_absoluteX="260dp" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/silksaree"
                    tools:layout_editor_absoluteX="260dp" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/coconut_oil"
                    tools:layout_editor_absoluteX="260dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/turmericpowder"
                    tools:layout_editor_absoluteX="260dp" />

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/cashew_nuts"
                    tools:layout_editor_absoluteX="260dp" />

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/lemon_removebg_preview"
                    tools:layout_editor_absoluteX="260dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/palm"
                    tools:layout_editor_absoluteX="260dp" />


                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/edible_oil"
                    tools:layout_editor_absoluteX="260dp" />

                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/dhal"
                    tools:layout_editor_absoluteX="260dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image10"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/millet"
                    tools:layout_editor_absoluteX="260dp" />

                <ImageView
                    android:id="@+id/image11"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/mango"
                    tools:layout_editor_absoluteX="260dp" />

                <ImageView
                    android:id="@+id/image12"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/moringa"
                    tools:layout_editor_absoluteX="260dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image13"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/tapioca"
                    tools:layout_editor_absoluteX="260dp" />

                <ImageView
                    android:id="@+id/image14"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/palkova"
                    tools:layout_editor_absoluteX="260dp" />

                <ImageView
                    android:id="@+id/image15"
                    android:layout_width="85dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="40dp"
                    android:background="@drawable/background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/port"
                    tools:layout_editor_absoluteX="260dp" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/search"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:srcCompat="@drawable/border"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search for district..."
        android:textColor="@color/material_dynamic_neutral30"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.287"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="42dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        app:srcCompat="@drawable/search" />


</androidx.constraintlayout.widget.ConstraintLayout>